<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.landingscreen.LandingScreenSix">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/backButton"
            style="?attr/materialIconButtonFilledStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:contentDescription="@string/filled_icon_btn_desc"
            app:backgroundTint="?attr/colorSecondaryContainer"
            app:icon="@drawable/arrow_back_24px"
            app:iconTint="?attr/colorOnSecondaryContainer" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/activity_landing_screen_six_textview_heading"
            android:textColor="?attr/colorOnSurface"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/activity_landing_screen_six_textview_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/activity_landing_screen_six_text_input_layout_textview_age"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ageDropDownMenu"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="?attr/colorOnTertiaryContainer"
                android:textColorHint="?attr/colorOnTertiaryContainer"
                app:boxBackgroundColor="?attr/colorTertiaryContainer"
                app:boxStrokeWidth="0dp"
                app:shapeAppearance="?attr/shapeAppearanceCornerSmall">

                <AutoCompleteTextView
                    android:id="@+id/dropdownAgeField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownHeight="200dp"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@drawable/metric_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/activity_landing_screen_six_text_input_layout_textview_age_metric"
                android:textAlignment="center"
                android:textColor="?attr/colorOnTertiaryContainer"
                android:textSize="16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/activity_landing_screen_six_text_input_layout_textview_height"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/heightDropDownMenu"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="?attr/colorOnTertiaryContainer"
                android:textColorHint="?attr/colorOnTertiaryContainer"
                app:boxBackgroundColor="?attr/colorTertiaryContainer"
                app:boxStrokeWidth="0dp"
                app:hintEnabled="false"
                app:shapeAppearance="?attr/shapeAppearanceCornerSmall">

                <AutoCompleteTextView
                    android:id="@+id/dropdownHeightField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dropDownHeight="200dp"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@drawable/metric_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/activity_landing_screen_six_text_input_layout_textview_height_metric"
                android:textAlignment="center"
                android:textColor="?attr/colorOnTertiaryContainer"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/activity_landing_screen_six_text_input_layout_textview_weight"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weightDropDownMenu"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="?attr/colorOnTertiaryContainer"
                android:textColorHint="?attr/colorOnTertiaryContainer"
                app:boxBackgroundColor="?attr/colorTertiaryContainer"
                app:boxStrokeWidth="0dp"
                app:shapeAppearance="?attr/shapeAppearanceCornerSmall">

                <AutoCompleteTextView
                    android:id="@+id/dropdownWeightField"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dropDownHeight="200dp"
                    android:fontFamily="@font/poppins_medium"
                    android:inputType="none" />


            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@drawable/metric_background"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/activity_landing_screen_six_text_input_layout_textview_weight_metric"
                android:textAlignment="center"
                android:textColor="?attr/colorOnTertiaryContainer"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="@string/all_activity_next_button"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>